.hpanel.contact-panel{class: "h#{person.appearance(current_unit)}"}
  .panel-body
    .pull-right.text-right.hidden-print
      .btn-group
        - if person.phone.present?
          = tel_to icon('phone'), person.phone, class: 'btn btn-default'
        - if person.email.present?
          = mail_to icon('envelope'), person.email, class: 'btn btn-default'
    = link_to person do
      = profile_image person
      %h3= person.last_name
      .text-muted.font-bold.m-b-xs
        = person.first_names
  - if person.expired?
    .alert.alert-danger
      = icon('warning', Person.human_attribute_name(:expired))
      .small
        = Person.human_attribute_name(:updated_at)
        = l(person.updated_at.to_date)
