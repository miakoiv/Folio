.hpanel.filter-item[activity]
  = link_to activity do
    .panel-body.social-board
      .media.social-profile.clearfix
        .media-left
          = profile_image activity.resource
        .media-body
          .pull-right.text-right
            %div
              %span.small.font-bold{class: activity.whodunnit.deleted? && 'deleted'}
                = activity.whodunnit
              %span{class: "text-#{activity.appearance}"}
                = icon(activity.icon, resource_ident(activity), class: 'fa-lg')
            %small.stat-label
              %span.font-normal= l(activity.created_at, format: :short)
          %h4= resource_name(activity)
          - if activity.context != activity.resource
            %small= activity.context
