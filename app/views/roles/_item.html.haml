.list-group-item{id: dom_id(role)}
  - unless editing_disabled?
    .pull-right
      = link_to icon('trash'),
          remove_privilege_path(@user, role.name, role.resource_gid.to_s),
          method: :delete, remote: true, class: 'btn btn-xs btn-danger'
  = icon(role.icon, role, class: 'fa-lg')
  %span.label.label-violet= role.resource
