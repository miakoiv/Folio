- content_for :header do
  %h2= title(User, count: 2)
  %small= @user.full_name
- content_for :breadcrumb do
  %li= link_to title(User, count: 2), users_path
  %li.active= @user.full_name

.content
  .row
    .col-lg-4.col-md-6
      = render @user
    .col-lg-4.col-md-6
      .hpanel
        .panel-heading.hbuilt
          .pull-right
            = link_to icon('close', t('actions.cancel')), @user, class: 'btn btn-xs btn-default'
          = t('users.panel.header')
        .panel-body
          = render partial: 'form'
