.hpanel.hblue.contact-panel
  .panel-body
    = profile_image(user)
    %h3= user.last_name
    .text-muted.font-bold.m-b-xs
      = user.first_names
  .panel-footer.contact-footer
    .row
      .col-md-6.border-right
        .contact-stat
          %span Käyntejä:
          %strong= user.sign_in_count
      .col-md-6
        .contact-stat
          %span Viimeisin:
          %strong= l(user.current_sign_in_at, format: :short)
