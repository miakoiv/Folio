.hpanel.hidden-print
  .panel-heading.hbuilt
    .pull-right
      = link_to icon('plus', t('images.panel.upload')), '#image-upload',
          class: 'btn btn-xs btn-success',
          data: {toggle: 'collapse'}
    = icon('film', t('images.panel.header'))
  .panel-body
    #image-upload.collapse
      = render partial: 'images/new', object: @user, as: :imageable
      .hr-line-dashed
    .slim-scroll{style: 'max-height: 200px; padding-right: 20px;'}
      = render partial: 'images/list', object: @user, as: :imageable
