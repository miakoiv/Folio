#logo.light-version
  %span Folio
%nav{role: 'navigation'}
  .header-link.hide-menu
    %i.fa.fa-bars
  .small-logo
    %span.text-primary Folio
  %form.navbar-form-custom{role: 'search'}
    .form-group
      %input.form-control{type: 'text', placeholder: 'Etsi mit√§ tahansa'}
  .mobile-menu
    %button.navbar-toggle.mobile-menu-toggle{type: 'button',
      data: {toggle: 'collapse', target: '#mobile-collapse'}}
      %i.fa.fa-chevron-down
    #mobile-collapse.mobile-navbar.collapse
      %ul.nav.navbar-nav
