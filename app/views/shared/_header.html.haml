          %li
            = link_to destroy_user_session_path, method: :delete do
              %i.fa.fa-fw.fa-sign-out
              Kirjaudu ulos
          %li
            = link_to current_user do
              %i.fa.fa-fw.fa-user
              Oma profiili
  .navbar-right
    %ul.nav.navbar-nav.no-borders
      - if user_signed_in?
        %li
          = link_to destroy_user_session_path, method: :delete do
            %i.pe-7s-upload.pe-rotate-90
