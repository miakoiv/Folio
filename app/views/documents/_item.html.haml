.media[document]
  .media-left
    = link_to document.attachment_url(:original), target: '_blank' do
      = image_tag document.attachment_url(:thumbnail),
          class: 'media-object img-thumbnail img-responsive'
  .media-body
    .pull-right.hover-actions
      = link_to icon('trash'), document, method: :delete, remote: true,
          class: 'btn btn-xs btn-danger'
    %p.small.font-bold
      = document.attachment[:original].original_filename.truncate(16)
    %p.small.text-muted
      = number_to_human_size document.attachment[:original].mime_type
    %p.small.text-muted
      = number_to_human_size document.attachment[:original].size
